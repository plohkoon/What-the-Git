{
  "name": "What the Git?",
  "description": "An extension that tells you of new merges in any subscribed Github Repos",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [
      "queryScript.js"
    ],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' 'sha256-5As4+3YpY62+l38PsxCEkjB1R4YtyktBtRScTJ3fyLU='; object-src 'self';",
  "permissions": [
    "https://github.com/*",
    "identity"
  ]
}
